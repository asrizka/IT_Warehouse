    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            const sidebar = document.getElementById('accordionSidebar');
            const navLinks = sidebar.querySelectorAll('.nav-link span');
            const contentWrapper = document.getElementById('content-wrapper');

            // Toggle collapsed class on the sidebar
            sidebar.classList.toggle('collapsed');

            // Toggle between content-expanded and content-collapsed classes on content-wrapper
            contentWrapper.classList.toggle('content-expanded');
            contentWrapper.classList.toggle('content-collapsed');

            // Hide or show text in nav-links based on the sidebar's collapsed state
            navLinks.forEach(span => {
                if (sidebar.classList.contains('collapsed')) {
                    span.style.display = 'none'; // Hide text
                } else {
                    span.style.display = 'inline'; // Show text
                }
            });
        });
    </script>

